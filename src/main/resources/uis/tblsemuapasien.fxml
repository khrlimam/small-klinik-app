<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="479.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.klinik.dev.controller.TblSemuaPasien">
    <children>
        <HBox>
            <children>
                <DatePicker fx:id="dpFilterTable" prefHeight="25.0" prefWidth="250.0" promptText="Cari nama, NO RM, jadwal checkup">
                    <HBox.margin>
                        <Insets left="3.0" />
                    </HBox.margin>
                </DatePicker>
                <Pane prefWidth="200.0" HBox.hgrow="ALWAYS" />
                <Button mnemonicParsing="false" onAction="#showPatient" prefHeight="25.0" prefWidth="95.0" style="-fx-background-color: #1abc9c;" text="(S) Show" textFill="WHITE">
                    <HBox.margin>
                        <Insets right="3.0" />
                    </HBox.margin>
                </Button>
                <Button mnemonicParsing="false" onAction="#checkupPatient" prefHeight="25.0" prefWidth="110.0" style="-fx-background-color: #2980b9;" text="(C) Checkup" textFill="WHITE">
                    <HBox.margin>
                        <Insets right="3.0" />
                    </HBox.margin>
                </Button>
                <Button mnemonicParsing="false" onAction="#deletePatient" prefHeight="25.0" prefWidth="95.0" style="-fx-background-color: #e74c3c;" text="(D) Delete" textFill="WHITE">
                    <HBox.margin>
                        <Insets right="3.0" />
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
        <TableView fx:id="tblPasien" onKeyPressed="#onKeyPressed" prefHeight="440.0" prefWidth="780.0">
            <columns>
                <TableColumn fx:id="noRmColumn" prefWidth="75.0" style="-fx-alignment: CENTER_LEFT; -fx-font-size: 14px;" text="NO RM" />
                <TableColumn fx:id="namaColumn" prefWidth="200.0" style="-fx-alignment: CENTER_LEFT; -fx-font-size: 14px;" text="Nama" />
                <TableColumn fx:id="tindakanColumn" prefWidth="150.0" style="-fx-alignment: CENTER_LEFT; -fx-font-size: 14px;" text="Tindakan" />
                <TableColumn fx:id="diagnosisColumn" prefWidth="250.0" style="-fx-alignment: CENTER_LEFT; -fx-font-size: 14px;" text="Diagnosis" />
                <TableColumn fx:id="jadwalCheckupColumn" prefWidth="500.0" style="-fx-alignment: CENTER_LEFT; -fx-font-size: 14px;" text="Jadwal Checkup" />
            </columns>
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </TableView>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
